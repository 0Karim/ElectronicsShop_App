<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicShop.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElectronicShop.WebUI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>

                <div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-dark">EN</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container app-content">
        <div>
            <div class="container mt-4">
                <div class="alert alert-info " role="alert" id="alertDiv">
                    <button type="button" class="close alert-close" aria-hidden="true">×</button>
                    <i class="fa fa-check-circle-o mr-2" aria-hidden="true" id="alertIcon">
                    </i> <span id="alertMsgSpan"></span>
                </div>
            </div>
        </div>


        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ElectronicShop.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial.cshtml" />

    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/date-picker/jquery-ui.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/scroll-bar/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/horizontal-menu/horizontal-menu.js"></script> <!-- SIDE-MENU JS -->
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/js/custom.js"></script><!-- CUSTOM JS-->

    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/datatable/dataTables.responsive.min.js"></script>

    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/sidebar/sidebar.js"></script>

    <!-- STICKY JS -->
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/js/stiky.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <script src="~/lib/Template/@ViewBag.LangDirection/assets/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
